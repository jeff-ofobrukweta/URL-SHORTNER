FROM node:10-alpine

LABEL application="url-app"

ENV TERM=xterm-256color NODE_ENV=$NODE_ENV

RUN mkdir -p /usr/app
WORKDIR /usr/app

RUN npm install -g yarn@1.12.x && rm -rf package-lock.json
COPY package.json yarn.lock /usr/app/

RUN yarn install

COPY docker/dev/entrypoint.sh /usr/app

ENTRYPOINT ["sh", "/usr/app/docker/dev/entrypoint.sh"]
